---
const { posts, cat } = Astro.props;
---

<ul class="post-list">
  {
    posts.map((post: any) => (
      <li>
        <a href={post.url} class="post-link">
          {post.frontmatter.title}
        </a>
      </li>
    ))
  }
  <div class="post-category dim">{cat}</div>
</ul>

<style>
  .post-list {
    list-style: none;
  }
  .post-list > li {
    margin-bottom: 2rem;
  }
  .post-link {
    font-size: 1.4rem;
    font-weight: 500;
    text-decoration: none;
    border-bottom: 2px solid black;
  }
  .post-category {
    margin-bottom: 4rem;
  }
</style>
